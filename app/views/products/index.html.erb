<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

  <% @products.each do |product| %>
    <div class="productstemplate" style="display: inline-block; width: 200px; height: 200px; margin-left: 50px;" >
      <h1><%= product.name %></h1>
      <%= image_tag(product.picture_url , :width => 50) if product.picture.present? %>
      <p><%= product.description %></p>
      <h3><%= product.price %></h3>
    </div>
  <%end%>


  <div class="table" style="margin-top: 200px;">
    <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Picture</th>
        <th>Description</th>
        <th>Price</th>
        <th>user</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= image_tag(product.picture_url , :width => 50) if product.picture.present? %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <th><%= product.user.email %></th>
          <td><%= link_to 'Show', product %></td>

          <% if product.user == current_user %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Product', new_product_path %>
